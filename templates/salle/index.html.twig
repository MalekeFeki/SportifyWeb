{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block body %}
<style>
    .white-text {
        color: white;
    }
</style>
    <h1>Salle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ids</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Region</th>
                <th>Options</th>
                <th>Imagesalle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.ids }}</td>
                <td>{{ salle.nom }}</td>
                <td>{{ salle.adresse }}</td>
                <td>{{ salle.region }}</td>
                <td><ul>
            {% for option in salle.options %}
                <li>{{ option }}</li>
            {% endfor %}
        </ul></td>
                <td>{{ salle.imagesalle }}</td>
                <td>
                    <a href="{{ path('app_salle_show', {'idS': salle.idS}) }}">show</a>
                    <a href="{{ path('app_salle_edit', {'idS': salle.idS}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_salle_new') }}">Create new</a>
{% endblock %}
