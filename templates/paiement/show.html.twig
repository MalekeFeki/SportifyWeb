{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}


{% block stylesheets %}
    <style>
        /* Style for the table */
        .table {
            background-color: black; /* Set the background color to black */
            color: white; /* Set the text color to white */
        }

        /* Style for the table header */
        .table  th {
            background-color: black; /* Set the background color of header cells to black */
            color: white; /* Set the text color of header cells to white */
        }
    </style>
{% endblock %}


{% block body %}
    <h1 style="color: white; background-color: black;">Paiement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idp</th>
                <td style="color: white;">{{ paiement.idp }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td style="color: white;">{{ paiement.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td style="color: white;">{{ paiement.email }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td style="color: white;">{{ paiement.country }}</td>
            </tr>
            <tr>
                <th>Ncb</th>
                <td style="color: white;">{{ paiement.ncb }}</td>
            </tr>
            <tr>
                <th>Cvc</th>
                <td style="color: white;">{{ paiement.cvc }}</td>
            </tr>
            <tr>
                <th>Expdate</th>
                <td style="color: white;">{{ paiement.expdate ? paiement.expdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Postalcode</th>
                <td style="color: white;">{{ paiement.postalcode }}</td>
            </tr>
            <tr>
                <th>Promocode</th>
                <td style="color: white;">{{ paiement.promocode }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td style="color: white;">{{ paiement.price }}</td>
            </tr>
            <tr>
                <th>Pdate</th>
                <td style="color: white;">{{ paiement.pdate ? paiement.pdate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

<div style="background-color: black; height: 20px;"></div>
